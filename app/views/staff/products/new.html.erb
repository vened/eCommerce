<%= simple_form_for(@staff_product, url: staff_products_path) do |f| %>

    <section class="page-title">
        <h1>
            <%= t('products.new') %>
        </h1>
        <div class="page-title-action">

            <%= link_to staff_products_path, class: 'page-title-action__link-back' do %>
                <i class="fa fa-long-arrow-left"></i>
                <%= t('back') %>
            <% end %>

            <button type="submit" name="commit" class="btn btn-sm btn-success">
                <i class="fa fa-save"></i>
                <%= t('products.save') %>
            </button>
        </div>
    </section>

    <%= f.error_notification %>


    <md-content>
        <md-tabs md-dynamic-height md-border-bottom>
            <md-tab label="<%= t('base_info') %>">
                <md-content class="md-padding">
                    <%= render partial: 'form', locals: { f: f } %>
                </md-content>
            </md-tab>
        </md-tabs>
    </md-content>

<% end %>
