<%= simple_form_for(@staff_product, url: staff_products_path(@staff_product)) do |f| %>

    <section class="page-title">
        <h1>
            <%= t('products.edit') %>
        </h1>
        <div class="page-title-action">

            <%= link_to staff_products_path, class: 'page-title-action__link-back' do %>
                <i class="fa fa-long-arrow-left"></i>
                <%= t('back') %>
            <% end %>

            <%= f.button :submit %>
        </div>
    </section>


    <%= render partial: 'form', locals: { f: f } %>

<% end %>
